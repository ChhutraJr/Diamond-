
@{
     Layout = null;
    <script src="~/Content/js/plugins/bootstrap-filestyle.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/StyleHRP.css" rel="stylesheet"/>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
}
<style>
    h4{
        text-align:center;
    }
    </style>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title center"> Add GroupUsers</h4>
                </div>
                <div class="modal-body">

                    <input type="text" class="form-control" placeholder="GroupName" id="txtAddGroup" /><br />
                    <div class="row">
                        <div class="col-md-offset-3 col-md-2 center">
                            <button type="button" class="btn btn-primary btnMarginBottom5" id="btnAddGroup"><i class="glyphicon glyphicon-download-alt"></i> Add Group</button>
                        </div>
                            <div class="col-md-offset-2 col-md-2 center">
                                <button type="button" class="btn btn-primary btnMarginBottom5" id="btnCancelAdd"><i class="glyphicon glyphicon-ban-circle"></i> Cancel</button>
                            </div>
                            
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnAddGroup").click(function () {
            var groupname = $("#txtAddGroup").val();
            if(groupname=="")
            {
                alert("Please input Group Name");
            }
            else {
                $.ajax({
                    url: "/Employees/AddGroup",
                    datatype: "JSON",
                    type: "POST",
                    data: { groupname },
                    success:function(result)
                    {

                        $("#txtAddGroup").val("");
                    }
                });
            }
        });
        $("#btnCancelAdd").click(function () {
            $("#txtAddGroup").val("");
        });
       
    });
</script>


