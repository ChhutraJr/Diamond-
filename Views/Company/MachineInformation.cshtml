
@{
    ViewBag.Title = "MachineInformation";
    Layout = "~/Views/Home/HomeHeader.cshtml";
}
<link href="~/Content/StyleHRP.css" rel="stylesheet" />
<h4>Machine Information</h4>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-12">
            <div class="divTblHeight220">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Machine ID</th>
                            <th>Machine Name</th>
                            <th>Connect Type</th>
                            <th>IP/CommPort</th>
                            <th>Port/Baudrate</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <label>Job Position Detail</label>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row div-Sm-Magin">
                                <label class="col-sm-4 control-label lbPadTop6PadBot6">Machine ID</label>
                                <div class="col-sm-7">
                                    <input class="form-control input-sm" id="JopPosName" type="text">
                                </div>
                            </div>
                            <div class="row div-Sm-Magin">
                                <label class="col-sm-4 control-label lbPadTop6PadBot6">Machine Name</label>
                                <div class="col-sm-7">
                                    <input class="form-control input-sm" id="JopPosKhmer" type="text">
                                </div>
                            </div>
                            <div class="row div-Sm-Magin">
                                <label class="col-sm-4 control-label lbPadTop6PadBot6">Connect Type</label>
                                <div class="col-sm-7">
                                    <select class="form-control" id="ConType">
                                        <option>1</option>
                                        <option>2</option>
                                    </select>
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row div-Sm-Magin">
                                <label class="col-sm-4 control-label lbPadTop6PadBot6">IP/CommPort</label>
                                <div class="col-sm-7">
                                    <input class="form-control input-sm" id="JopPosName" type="text">
                                </div>
                            </div>
                            <div class="row div-Sm-Magin">
                                <label class="col-sm-4 control-label lbPadTop6PadBot6">Port/Baudrate</label>
                                <div class="col-sm-7">
                                    <input class="form-control input-sm" id="JopPosKhmer" type="text">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer divPadR0">
                    <button type="button" class="btn btn-primary btnMarginBottom5"><i class="glyphicon glyphicon-file"></i> New (F2)</button>
                    <button type="button" class="btn btn-primary btnMarginBottom5"><i class="glyphicon glyphicon-edit"></i> Edit (F3)</button>
                    <button type="button" class="btn btn-primary btnMarginBottom5"><i class="glyphicon glyphicon-trash"></i> Delete (Del)</button>
                    <button type="button" class="btn btn-primary btnMarginBottom5"><i class="glyphicon glyphicon-search"></i> Search (F4)</button>
                    <button type="button" class="btn btn-primary btnMarginBottom5"><i class="glyphicon glyphicon-save"></i> Save (Enter)</button>
                    <button type="reset" class="btn btn-primary btnMarginBottom5"><i class="glyphicon glyphicon-remove"></i> Cancel (Esc)</button>
                    <button type="button" class="btn btn-primary btnMarginBottom5"><i class="glyphicon glyphicon-refresh"></i> Refresh (F5)</button>
                    <button type="button" class="btn btn-primary btnMarginBottom5"><i class="glyphicon glyphicon-off"></i> Exit (Alt+F4)</button>
                </div>
            </div>
        </div>
    </div>
</div>