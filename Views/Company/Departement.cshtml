                    var arrdata = JsonArraySpliter(result);

                    for (var i = 0; i < arrdata.length; i++) {
                        $("#parent").append("<li>" + arrdata[i].deptName + "</li>")
                    }
                    Clear_Form();
                    $("#deptName").focus();
                }
            });
        }
    });
