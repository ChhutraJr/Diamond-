    });
    $("#btnNew").click(function () {
        $("#btnCancel").prop("disabled", false);
        if ($(this).val() == 1) {
            Enabled_Input();
            $(this).val(0);
            $(this).text('').append('<i class="glyphicon glyphicon-save"></i>' + 'Save(Enter)')
        }
        else {
            
            var deptname = $("#deptName").val();
            if (deptname == "")
