
@{
    ViewBag.Title = "UserAccessRight";
    Layout = "~/Views/Home/HomeHeader.cshtml";
}
<link href="~/Content/StyleHRP.css" rel="stylesheet" />
<h4>User Access Right</h4>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-4">
            <div class="form-horizontal">
                <label>User Name</label>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-4 divPadR0">
                                    <label class="lbPadTop6PadBot6">User Name</label>
                                </div>
                                <div class="col-sm-7">
                                    <select class="form-control" id="GroupN">
                                        <option>1</option>
                                        <option>2</option>
                                    </select>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-horizontal">
                <label>User Type</label>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-4 divPadR0">
                                    <label class="lbPadTop6PadBot6">User Type</label>
                                </div>
                                <div class="col-sm-7">
                                    <select class="form-control" id="GroupN">
                                        <option>1</option>
                                        <option>2</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-horizontal">
                <label>Group Name</label>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-4 divPadR0">
                                    <label class="lbPadTop6PadBot6">Group Name</label>
                                </div>
                                <div class="col-sm-7">
                                    <select class="form-control" id="GroupN">
                                        <option>1</option>
                                        <option>2</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <label>Application Feature Access</label>
                </div>
                <div class="panel-body">
                    <div class="divTblHeight220">
                        <table class="table table-striped table-bordered table-hover table-condensed">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th>Access Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>ta</td>
                                    <td>1</td>
                                </tr>
                                <tr>
                                    <td>ka</td>
                                    <td>1</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label class="lbPadTop6PadBot6">Description</label>
                        </div>
                        <div class="col-sm-6">
                            <select class="form-control" id="DesApplication">
                                <option>1</option>
                                <option>2</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <label>Report Feature Access</label>
                </div>
                <div class="panel-body">
                    <div class="divTblHeight220">
                        <table class="table table-striped table-bordered table-hover table-condensed">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th>Access Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>ta</td>
                                    <td>1</td>
                                </tr>
                                <tr>
                                    <td>ka</td>
                                    <td>1</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label class="lbPadTop6PadBot6">Description</label>
                        </div>
                        <div class="col-sm-6">
                            <select class="form-control" id="DesApplication">
                                <option>1</option>
                                <option>2</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <button type="button" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Save (Enter)</button>
            <button type="button" class="btn btn-primary"><i class="glyphicon glyphicon-remove"></i> Cancel (Esc)</button>
        </div>
    </div>
</div>
